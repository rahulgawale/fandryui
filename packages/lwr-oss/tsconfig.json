{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": false,

    "lib": ["ES2020", "DOM"],
    "types": ["lwc"],

    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
