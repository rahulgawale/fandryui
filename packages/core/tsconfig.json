{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false,

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "lib": ["ES2020", "DOM"],
    "types": ["lwc"]
  },
  "include": ["src"]
}
